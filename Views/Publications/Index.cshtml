@model IEnumerable<NetAtlas.Models.Publication>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.statut)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.statut)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                @if(@ViewBag.isManager)
                {
                <a asp-controller="Avertissements" asp-action="Create" asp-route-id="@item.MembreID">Avertir Membre</a>

                }
                    @if (@ViewBag.isAdmin)
                    {
                        <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
                    }
            </td>
        </tr>
}
    </tbody>
</table>
