                         <li class="nav-item dropdown"><a href="#"><span>Gestion Amitiés</span> <i class="bi bi-chevron-right"></i></a>
                               <ul>
                              <li><a class="nav-link text-dark" asp-area="" asp-controller="NetAtlasUsers" asp-action="Index">InvitationsAmis</a></li>
