                              <li><a class="nav-link text-dark" asp-area="" asp-controller="Publications" asp-action="Delete">Delete Publication</a></li>
                              <li><a class="nav-link text-dark" asp-area="" asp-controller="Publications" asp-action="Index">Publications</a></li>
                             
                              </ul>
